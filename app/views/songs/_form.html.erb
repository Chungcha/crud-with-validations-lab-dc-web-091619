<%= form_for @song do |f| %>
    <% if @song.errors.any? %>
        <% @song.errors.full_messages.each do |error| %>
        <p><%= error %></p>
        <%end%>
    <%end%>
<%= f.label :title %>
<%= f.text_field :title %>
<br>
<%= f.label :released %>

<%= f.check_box :released %>

<%#= f.label "Yes", :released => "true" %>
<%#= f.radio_button :released, true %>
<%#= f.label "No", :released => "false" %>
<%#= f.radio_button :released , false %>
<br>
<%= f.label :release_year %>
<%= f.number_field :release_year %>
<br>
<%= f.label :artist_name %>
<%= f.text_field :artist_name %>
<br>
<%= f.label :genre %>
<%= f.text_field :genre %>
<br>
<%= f.submit %>
<% end %>
